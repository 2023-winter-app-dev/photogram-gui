<h1>Photo Details</h1>


<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @the_photo.image %>>
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
    <%= @the_photo.caption %>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>

  <dt>
    Posted
  </dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>


  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>">
      <label for="photo_edits">Image</label>
      <input id="photo_edits" type="text" name="photo_edits" placeholder="Enter a URL for the image..." value=<%= @the_photo.image %>>
      <label for="caption_edits">Caption</label>
      <textarea id="caption_edits" type="text" name="caption_edits" placeholder="Enter a caption for the photo..."><%= @the_photo.caption %></textarea>
      <button> Update photo </button>
    </form>
  </dd>
  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
<tr>
  <th>
    Commenter
  </th>

  <th>
    Comment
  </th>

  <th>
    Posted
  </th>
</tr>
<% @the_photo_comments = @the_photo.comments %>
<% @the_photo_comments.each do |comment| %>

<tr>
  <th>
    <%= comment.commenter.username %>
  </th>

  <th>
    <%= comment.body %>
  </th>

  <th>
    <%= comment.created_at %>
  </th>
</tr>

<% end %>
</table>




<h3>Add a new comment</h3>

  <form action="/add_comment/<%= @the_photo.id %>">
    <label for="photo_commented">Photo ID</label>
    <input id="photo_commented" type="text" name="photo_commented" value=<%= @the_photo.id %>>

    <label for="author_commenting">Author ID</label>
    <input id="author_commenting" type="text" name="author_commenting" >

    <label for="comment_added">Comment</label>
    <textarea id="comment_added" type="text" name="comment_added" placeholder="Enter a comment..."></textarea>
    <button> Add comment </button>
  </form>

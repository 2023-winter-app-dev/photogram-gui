<nav>
  <ul>
    <li>
      <a href="/users">Users</a>
    </li>
    <li>
      <a href="/photos">Photos</a>
    </li>
  </ul>
</nav>
<h1><%= @the_user.username %></h1>


<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @the_user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/edit_user/<%= @the_user.id %>">
    <label for="user_edits">Username</label>
    <input id="user_edits" type="text" name="user_edits" placeholder="Enter a username..." value=<%= @the_user.username %>>
    <button>Update user</button>
  </dd>
</dl>

<hr>

<h1>Own photos</h1>
<table border="1">
<tr>
  <th>
    Image
  </th>
  <th>
    Owner
  </th>
  <th>
    Caption
  </th>
  <th>
    Posted
  </th>
  <th>
  </th>
</tr>

<% @the_user.own_photos.each do |photo| %>

<tr>
  <th>
    <img src=<%= photo.image%>>
  </th>
  <th>
    <%= photo.poster.username %>
  </th>
  <th>
    <%= photo.caption %>
  </th>
  <th>
    <%= photo.created_at %>
  </th>
  <th>
    <a href="/photos/<%=photo.id%>">Show details</a>
  </th>
</tr>

<% end %>
